#include <iostream>
#include <string>

class Book {
public:
    Book(const std::string& t, const std::string& a, int y)
        : title(t), author(a), year(y) {}

    Book(const std::string& t, const std::string& a)
        : Book(t, a, 0) {}

    Book(const std::string& t)
        : Book(t, "Unknown", 0) {}

    void printInfo() {
        std::cout << "Title: " << title
                  << ", Author: " << author
                  << ", Year: " << year << std::endl;
    }

    std::string title;
    std::string author;
    int year;
};

int main() {
    Book book1("1984", "George Orwell", 1949);
    Book book2("Clean Code", "Robert C. Martin");
    Book book3("Mystery Book");

    book1.printInfo(); // Title: 1984, Author: George Orwell, Year: 1949
    book2.printInfo(); // Title: Clean Code, Author: Robert C. Martin, Year: 0
    book3.printInfo(); // Title: Mystery Book, Author: Unknown, Year: 0
    
    return 0;
}